    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/version101msg" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/version10"
        android:textStyle="bold"/>

    <TextView
